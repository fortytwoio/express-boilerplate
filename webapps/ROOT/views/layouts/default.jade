doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    title #{main_title}
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet")
    link(href="#{baseUrl}/css/style.css", rel="stylesheet")
    block head

  body
    div.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role="navigation")
      div.container
        div.navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#main-navigation")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#{baseUrl}/") #{brand_name}
        div#main-navigation.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href="#",data-toggle="dropdown") Menu 1
                b.caret
              ul.dropdown-menu
                li
                  a(href="#{baseUrl}/test/") Submenu 1
                li
                  a(href="#{baseUrl}/test/foo") Submenu 2
            li: a(href="#{baseUrl}/new/") New Index
            li: a(href="#{baseUrl}/test/message") Add a message

    if messages
      .container
        each message, index in messages
          div(class="alert alert-dismissable alert-" + message.type)
            button.close(type="button",data-dismiss="alert",aria-hidden="true") &times;
            if message.title
              h4 #{message.title}
            if message.text
              p!= message.text
            button.btn.btn-success(type="button",data-dismiss="alert",aria-hidden="true") OK


    section.container
      block body

    script(src="//code.jquery.com/jquery-2.1.0.min.js")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
    block scripts
